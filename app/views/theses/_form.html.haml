= form_for @thesis do |f|
  - if @thesis.errors.any?
    #error_explanation
      %h2= "#{pluralize(@thesis.errors.count, "error")} prohibited this thesis from being saved:"
      %ul
        - @thesis.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :author_id
    = f.select :author_id, Author.all.inject({}) { | b, a | b[a.firstname + ' ' + a.surname] = a.id; b }
  .field
    = f.label :abstract
    = f.text_area :abstract
  .field
    = f.label :language
    = f.text_field :language
  .field
    = f.label :defended
    = f.date_select :defended
  .actions
    = f.submit 'Save'
